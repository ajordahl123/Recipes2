!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title Recipes2
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    #header.navbar
      %h1= link_to "Recipes2", root_path
      /.profilebutton
      -if !@user.nil?
        %li= link_to "View Your Profile", current_user
      -# LOGO EXAMPLE: .logo= image_tag("bedbug.png", :width => 100)
    - if flash[:notice]
      #notice.message= flash[:notice]
    - elsif flash[:warning]
      #warning.message= flash[:warning]
    = yield

