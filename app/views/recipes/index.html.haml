#main.container
%h1.header Recipe  Hello Foodies! (Homepage)
%h3.header Filter Recipes
= form_tag url_for(action: 'index'), :method => :get do
 = label_tag :recipe_name, 'Recipe name'
 = text_field_tag :recipe_name
 %br
 = label_tag :cuisine, "Type of cuisine"
 = text_field_tag :cuisine
 %br
 = label_tag :meal_type, "Type of meal"
 = select_tag :meal_type, options_for_select(["", "Breakfast", "Lunch", "Dinner", "Dessert"])
 %br
 = label_tag :level, "Level of difficulty"
 = select_tag :level, options_for_select(["","Easy", "Medium", "Hard"])
 %br
 = label_tag :time_to_create, "Time to create"
 = number_field_tag :time_to_create
 %br
 = check_box_tag (:vegetarian)
 = label_tag :vegetarian, "This recipe is vegetarian"
 = check_box_tag (:vegan)
 = label_tag :vegan, "This recipe is vegan"
 = check_box_tag (:nut_free)
 = label_tag :nut_free, "This recipe is nut free"
 = check_box_tag (:dairy_free)
 = label_tag :dairy_free, "This recipe is dairy free"
 %br
 = submit_tag "Refine the list of recipes"
 = link_to "Clear out filter settings",recipes_path(:reset => true)


- if current_user
 %h2= link_to "Sign out", destroy_user_session_path, method: :delete
- else
 %h2= link_to "Login", new_user_session_path


%table.table
 %thead
  %tr
   %th= link_to "Recipe Name", recipes_path(sort_by: 'recipe_name')
   %th= link_to "Rating", recipes_path(sort_by: 'rating')
   %th Meal type
   %th= link_to "Difficulty", recipes_path(sort_by: 'level') # this will sort as easy -> hard -> medium... create a hash to fix
 %tbody

  -@recipes.each do |r|
   %tr
    //-byebug
    %td.recipe_name= link_to "#{r.recipe_name}", recipe_path(r)
    %td.rating= "#{r.rating}"
    %td.meal_type= "#{r.meal_type}"
    %td.level= r.level


= link_to "Create a new recipe", new_recipe_path
