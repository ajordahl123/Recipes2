#main.container
%h1.header Show page

%table.table
  %thead
    %tr
      %th Recipe Name
      %th Meal type
      %th Difficulty Level
      %th Instructions
  %tbody
    %tr
      %td.recipe_name= @recipe.recipe_name
      %td.meal_type= @recipe.meal_type
      %td.level= @recipe.level
      %td.instructions= @recipe.instructions

= link_to "Edit recipe", edit_recipe_path(@recipe)
= link_to "Back to recipe listing", recipes_path

= link_to "Delete recipe", recipe_path(@recipe), :method => :delete
= link_to "Write a review", new_recipe_review_path(@recipe)

%table.table
  %thead
    %tr
      %th Rating
      %th Review
  %tbody
    -@recipe.reviews.each do |r|
      %tr
        %td= r.stars
        %td= r.text
